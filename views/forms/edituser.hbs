<div class="pages">
  <div class="page-title">
    <h1>Edit Account</h1>
  </div>
  <div class="form-container">
    <form class="user-form" action="/account/edit" method="POST" enctype="multipart/form-data">
      <label for="firstname">First Name</label>
      <input type="text" name="firstname" placeholder="First Name" value="{{user.firstname}}">
      
      <label for="lastname">Last Name</label>
      <input type="text" name="lastname" placeholder="Last Name" value="{{user.lastname}}">

      <label for="company">Company</label>
      <input type="text" name="company" placeholder="Company" value="{{user.company}}">

      <label for="avatar">Avatar</label>
        <input id="input-file" type="file"  name="avatar" value="{{user.avatar}}">

      {{!-- <label for="email">Email</label>
      <input type="email" name="email" placeholder="johndoe@gmail.com" value="{{user.email}}">

      <label for="password">Password</label>
      <input type="password" name="password" placeholder="*****" value="{{user.password}}"> --}}
      
      <button type="submit">Update Profile</button>
  
    </form>
    
    <div class="error-container">
      {{#if error}}
      <span class="error-message">{{error}}</span>
      {{/if}}
    </div>

  </div>
</div>